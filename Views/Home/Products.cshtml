@{
    ViewData["Title"] = "Home Page";
}
@model Wrapper
<div class="container">
    <div class="row">
        <div class="col-sm text-center">
            <h3>New Product</h3>
            <form asp-action="NewProduct" asp-controller="Home" method="POST">
                <span class="text-danger" asp-validation-for="NewProduct.Name"></span>
                <div class="form-group d-flex justify-content-between">
                    <label asp-for="NewProduct.Name">Name: </label>
                    <input asp-for="NewProduct.Name">
                </div>
                <span class="text-danger" asp-validation-for="NewProduct.Description"></span>
                <div class="form-group d-flex justify-content-between">
                    <label asp-for="NewProduct.Description">Description: </label>
                    <input asp-for="NewProduct.Description">
                </div>
                <span class="text-danger" asp-validation-for="NewProduct.Price"></span>
                <div class="form-group d-flex justify-content-between">
                    <label asp-for="NewProduct.Price">Price: </label>
                    <input asp-for="NewProduct.Price">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <div class="col-sm text-center">
            <h3>Existing Products</h3>
            <ul>
                @foreach(Product product in Model.AllProducts)
                {
                    <p><a href="/products/@product.ProductId">@product.Name</a></p>
                }
            </ul>
        </div>
    </div>
</div>